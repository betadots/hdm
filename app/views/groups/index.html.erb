<div class="container-fluid">
  <h1>Groups</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Restrict on</th>
        <th>Rules</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>
            <%= group.name %>
          </td>      
          <td>
            <%= group.restrict %>
          </td>
          <td>
            <ul>
              <% group.rules.take(4).each do |rule| %>
                <li><%= rule %></li>
              <% end %>
              <% if group.rules.size > 4 %>
                <li>&ellipsis;</li>
              <% end %>
            </ul>
          </td>
          <td>
            <% if can? :show, group %>
              <%= link_to group, class:"btn btn-sm btn-light min-width-btn" do %>
                <%= icon "eye" %>
                Show
              <% end %>
            <% end %>
            <% if can? :edit, group %>
              <%= link_to edit_group_path(group), class:"btn btn-sm btn-primary min-width-btn" do %>
                <%= icon "pencil" %>
                Edit
              <% end %>
            <% end %>
            <% if group.destroyable? && can?(:delete, group) %>
              <%= link_to group, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-danger min-width-btn" do %>
                <%= icon "trash" %>
                Delete
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if can? :create, Group %>
    <br>
    <%= link_to new_group_path, class:"btn btn-success min-width-btn" do %>
      <%= icon "plus-circle" %>
      New Group 
    <% end %>
  <% end %>
</div>
